                android:layout_height="250dp"
                android:src="@drawable/chess"
                android:contentDescription="@string/app_name" />
            <TextView
                android:id="@+id/at1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/app_name"/>
